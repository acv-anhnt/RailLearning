<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Category</th>
    <th>Published</th>
  </tr>
  <% @products.each do |product| %>
      <tr>
        <td><%= link_to(product.title, product_path(product)) %></td>
        <td><%= product.price %></td>
        <td><%= product.category.try(:title) %></td>
        <td><%= product.published %></td>
      </tr>
  <% end %>
</table>
